{
  "name": "@magic-sdk/react-native",
  "version": "2.1.0",
  "description": "Passwordless authentication for React Native.",
  "author": "Fortmatic <team@fortmatic.com> (https://fortmatic.com/)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/magicLabs/magic-js"
  },
  "homepage": "https://magic.link",
  "files": [
    "dist/**/*"
  ],
  "main": "dist/index.js",
  "module": "dist/index.m.js",
  "esmodule": "dist/index.modern.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "microbundle watch src/index.ts --define $ENV --target node --format modern,es,cjs --jsx React.createElement",
    "build": "microbundle build src/index.ts --define $ENV --target node --format modern,es,cjs --jsx React.createElement",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@babel/core": "^7.9.6",
    "@babel/runtime": "^7.9.6",
    "@magic-sdk/provider": "^2.1.2",
    "@magic-sdk/types": "^1.0.3",
    "buffer": "^5.6.0",
    "process": "^0.11.10",
    "regenerator-runtime": "0.13.5",
    "whatwg-url": "^8.0.0"
  },
  "devDependencies": {
    "react": "^16.13.1",
    "react-native": "^0.62.2",
    "react-native-webview": "9.4.0"
  },
  "peerDependencies": {
    "react": ">=16",
    "react-native": ">=0.60",
    "react-native-webview": ">=8 <10"
  },
  "ava": {
    "require": [
      "ts-node/register",
      "./test/setup.ts"
    ],
    "files": [
      "test/**/*.spec.ts"
    ],
    "extensions": [
      "ts",
      "tsx"
    ],
    "verbose": true
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": false,
    "check-coverage": true,
    "per-file": true,
    "lines": 99,
    "statements": 99,
    "functions": 99,
    "branches": 99,
    "reporter": [
      "lcov"
    ]
  }
}
